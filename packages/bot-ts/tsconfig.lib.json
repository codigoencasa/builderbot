{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "node_modules"
    ],
    "include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
    ]
}